<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PunkDetail">
    <ImageView
        android:id="@+id/beer_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"

        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/beer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/beer_image"
        android:text="Text"
        android:textColor="#000000"
        android:layout_marginTop="25dp"
        android:layout_marginRight="16dp"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/beer_abv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/beer_name"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="-50dp"
        android:text="Text"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/beer_ibu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/beer_abv"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="-60dp"
        android:text="Text"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/beer_ph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/beer_ibu"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="-70dp"
        android:text="Text"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/beer_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/beer_image"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="-80dp"
        android:text="Text"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/beer_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/beer_tagline"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="-80dp"
        android:text="Text"
        android:textColor="#000000"
        android:textSize="20dp" />

</RelativeLayout>